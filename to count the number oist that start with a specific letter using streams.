    import java.util.ArrayList;
    import java.util.Arrays;
    import java.util.Iterator;
    import java.util.List;
    import java.util.stream.Collectors;

    public class Main {
        public static void main(String[] args) {

           // 5. Write a Java program to count the number of strings in a list that start with a specific letter using streams.
            // i need to get the starting with A.
               char stating='A';
            List<String> list= Arrays.asList("AKHIL", "ANIL", "LOKESH","SAMVEDA");

            double counted=list.stream()
                    .filter( i -> i.startsWith(String.valueOf(stating))).count();

            System.out.println(counted);


        }
    }
